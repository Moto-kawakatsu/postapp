<h1 class="pop-items">人気イラスト</h1>
<div class='item-contents'>
<ul class='item-lists'>
<% num = 0 %>
 <% @ids.each do |id| %>
 <% if id[1] >= 3 %>
      <li class='list items2'>
      <span class="pop-nums"><%= num += 1%></span>
      <div class='item-img-content'>
      <%= link_to post_path(Post.find(id[0]).id) do %>
           <%= image_tag Post.find(id[0]).image, class:"item-img2" %>
           <% end %>
      </div>

      <div class='item-info'>
         <h3 class='item-name'>
           <%= Post.find(id[0]).title %>
           <% if user_signed_in? && current_user.already_liked?(Post.find(id[0])) %>
              <%= link_to post_likes_path(Post.find(id[0])), method: :delete do %>
              <i class="heart-color">♥</i>
              <% end %>
            <% elsif user_signed_in? && current_user.id == Post.find(id[0]).user_id%>
              <i class="heart-color1">♥</i>
            <% else %>
              <%= link_to post_likes_path(Post.find(id[0])), method: :post do %>
              <i class="heart-color1">♥</i>
              <% end %>
            <% end %>
            <%= Post.find(id[0]).likes.count %></span>
         </h3>

         <div class="item-price">
            <span><%= Post.find(id[0]).text %><br><div class='heart-btn'>

         </div>
      </div>
        <%end%>
        <%end%>
  </li>
 </ul>
</div>
<br>
<%= link_to 'back', root_path, class: "move-to-top"%>
       