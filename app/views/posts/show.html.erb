<div class="contents row">
  <div class="content_post" style="background-image: url(<%= @post.image %>);">
   <% if user_signed_in? && current_user.id == @post.user_id %>
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '編集', edit_post_path(@post.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', post_path(@post.id), method: :delete %>
        </li>
      </ul>
    </div>
    <% end %>

    <span class="name">
      <a href="/users/<%= @post.user.id %>">
        <span>投稿者</span><%= @post.user.nickname %>
      </a>
    </span>
  </div>
  <div class="post-contents">
  <p class="top-contents">題名　<%= @post.title %></p>
  <p class="top-contents">内容　<%= @post.text %></p>
  </div>
  
  <div class="container">
    <% if current_user %>
      <%= form_with(model: [@post, @comment], local: true) do |form| %>
        <%= form.text_area :text, placeholder: "コメントする", rows: "2" %>
        <%= form.submit "SEND" %>
      <% end %>
    <% else %>
      <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
    <% end %>
    <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
            <%= comment.text %>
             <%= link_to post_comment_path(@post.id, comment.id), method: :delete, class: "delete-button2" do%>
             <i class="fas fa-trash"></i>
             <%end%>
          </p>
        <% end %>
      <% end %>
        <% if @post.comments.length !=0 %>
            <br>
            <%= link_to '他のコメントを見る', post_comments_path(@post), class: "more-comments"%>
        <%end%>
    </div>
  </div>
</div>
