    <div class="content_post">
      <div class="main-image">  
        <%=image_tag post.image.variant(resize: '360x360'), class: 'message-image' if post.image.attached? %>
      </div>
      <div>
        <p class="post-title">題名：<%= post.title %></p>
        <p class="post-text"><%= post.text %></p>
      </div>
      <div class="more">
        <span><%= image_tag 'arrow_top.png', class:"arrow-image" %></span>
        <ul class="more_list">
          <li>
            <%= link_to '詳細', post_path(post.id), method: :get %>
          </li>
          <% if user_signed_in? && current_user.id == post.user_id %>
          <li>
            <%= link_to '編集', edit_post_path(post.id), method: :get %>
          </li>
          <li>
            <%= link_to '削除', post_path(post.id), method: :delete %>
          </li>
         <% end %>
        </ul>
      </div>
      <span class="name">
        <a href="/users/<%= post.user.id %>">
          <span>投稿者</span><%= post.user.nickname %>
        </a>
      </span>
    </div>
